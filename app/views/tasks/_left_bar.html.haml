.left__bar
  .left__bar__header
    .left__bar__header__user-name
      = link_to current_user.name, edit_user_path(current_user)
  .left__bar__main
    %table.priority
      %tr.priority__list
        %th.priority__list-name
          重要・緊急
        %th.priority__list-count
          = @counts["重要・緊急"]
